<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.library">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.BookDetails"/>
        <activity android:name=".activities.AddBooks" />
        <activity android:name=".activities.EditAccount" />
        <activity android:name=".activities.librarian_account" />
        <activity android:name=".activities.LogIn" />
        <activity android:name=".activities.AppNotification" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/AppCustomTheme" />
        <activity android:name=".activities.FavBooks" />
        <activity android:name=".activities.AppSearch"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AppHome" />
        <activity android:name=".activities.signUp" />
        <activity android:name=".activities.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>